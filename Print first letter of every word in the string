class Solution{
public:	
	
	string firstAlphabet(string S)
	{
	    int i,n;
	    string s1 = "";
	    n = S.length();
	    for(i=0;i<n;i++)
	    {
	        if(i==0)
	        {
	            s1 = s1+S[0];
	            
	        }
	        else if(S[i]==' ')
	        {
	            s1 = s1+S[i+1];
	            
	        }
	    }
	    return s1;
	    // Your code goes here
	}
};
