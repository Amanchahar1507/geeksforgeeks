class Solution{
    public:
    
    string modify (string s)
    {
        int i,n;
        //string s1;
        n = s.length();
        int up = isupper(s[0])?1:0;
        for(i=0;i<n;i++)
        {
            if(up)
            s[i]= toupper(s[i]);
            else
            s[i] = tolower(s[i]);
        }
        
        return s;
        // your code here
    }
};
